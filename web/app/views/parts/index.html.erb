<% provide(:title, 'All territories')%>
<h1>All Parts</h1>
<%= link_to 'New Part', new_part_path %>
<table>
  <tr>
    <th>number&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>description&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>price&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>mtd_sales&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>ytd_sales&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>units_on_hand&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>units_allocated&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>recorder_point&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th colspan="3"></th>
  </tr>
 
  <% @parts.each do |part| %>
    <tr>
      <td><%= part.number %></td>
      <td><%= part.description %></td>
      <td><%= part.price %></td>
      <td><%= part.mtd_sales %></td>
      <td><%= part.ytd_sales %></td>
      <td><%= part.units_on_hand %></td>
      <td><%= part.units_allocated %></td>
      <td><%= part.reorder_point %></td>
      
      <td><%= link_to 'Edit', edit_part_path(part) %></td>
    </tr>
  <% end %>
</table>
