<% provide(:title, 'All territories')%>
<h1>All Sales Reps</h1>
<%= link_to 'New Sales Rep', new_salesrep_path %>
<table class="table table-striped">
  <tr>
    <th>number&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>name&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>territory number&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>address&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>city&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>state&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>zip&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>MTD sales&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>YTD sales&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>MTD commission&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>YTD commission&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   </th>
    <th>commission rate</th>
    <th colspan="3"></th>
  </tr>
 
  <% @salesreps.each do |salesrep| %>
    <tr>
      <td><%= salesrep.sales_rep_number %></td>
      <td><%= salesrep.sales_rep_name %></td>
      <td><%= salesrep.territorynumber %></td>
      <td><%= salesrep.address %></td>
      <td><%= salesrep.city %></td>
      <td><%= salesrep.state %></td>
      <td><%= salesrep.zip %></td>
      <td><%= salesrep.mtd_sales %></td>
      <td><%= salesrep.ytd_sales %></td>
      <td><%= salesrep.mtd_commission %></td>
      <td><%= salesrep.ytd_commission %></td>
      <td><%= salesrep.commission_rate %></td>
      
      <td><%= link_to 'Edit', edit_salesrep_path(salesrep) %></td>
      <td><%= link_to 'Show', display_salesrep_path(salesrep) %></td>
    </tr>
  <% end %>
</table>
